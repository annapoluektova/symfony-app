{% extends '::base.html.twig' %}
{% block title %}Category List{% endblock %}

{% block body -%}
    <h1>Categories list</h1>

    <table class="records_list table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Category Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('categories_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.catName }}</td>
                <td>
                        <a class="btn btn-default btn-xs" href="{{ path('categories_show', { 'id': entity.id }) }}">show</a>
                        <a class="btn btn-default btn-xs" href="{{ path('categories_edit', { 'id': entity.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
            <a class="btn btn-default" href="{{ path('categories_new') }}">
                New Category
            </a>
    {% endblock %}
